{
  "id": "re.sonny.gjspack.Demo",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "gjspack-demo",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "branch": "main"
        }
      ]
    },
    {
      "name": "gjspack",
      "buildsystem": "simple",
      "builddir": true,
      "build-commands": [
        "cd ./gjspack && ./bin/gjspack --appid=gjspack src/cli.js /app/bin"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sonnyp/troll.git",
          "branch": "main"
        }
      ]
    },
    {
      "name": "gjspack-demo",
      "buildsystem": "simple",
      "builddir": true,
      "build-commands": ["gjspack --appid=gjspack-demo main.js /app/bin"],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
