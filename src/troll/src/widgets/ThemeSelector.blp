using Gtk 4.0;

template $ThemeSelector : Widget {
  hexpand: true;

  Box box {
    hexpand: true;
    orientation: horizontal;
    spacing: 12;

    CheckButton follow {
      styles [
        "theme-selector",
        "follow",
      ]

      hexpand: true;
      halign: center;
      focus-on-click: false;
      action-name: "app.color-scheme";
      action-target: "0";
      tooltip-text: _("Follow system style");

      accessibility {
        label: _("Follow system style");
      }
    }

    CheckButton {
      styles [
        "theme-selector",
        "light",
      ]

      hexpand: true;
      halign: center;
      group: follow;
      focus-on-click: false;
      action-name: "app.color-scheme";
      action-target: "1";
      tooltip-text: _("Light style");

      accessibility {
        label: _("Light style");
      }
    }

    CheckButton {
      styles [
        "theme-selector",
        "dark",
      ]

      hexpand: true;
      halign: center;
      group: follow;
      focus-on-click: false;
      action-name: "app.color-scheme";
      action-target: "4";
      tooltip-text: _("Dark style");

      accessibility {
        label: _("Dark style");
      }
    }
  }
}
